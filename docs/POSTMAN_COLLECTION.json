{
  "info": {
    "name": "API Tisséa - Express",
    "description": "Collection complète pour tester l'API Tisséa",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Signup",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "    console.log('Token saved:', jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"test123\",\n  \"name\": \"Test User\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/signup",
              "host": ["{{base_url}}"],
              "path": ["users", "signup"]
            },
            "description": "Créer un nouveau compte utilisateur"
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "    console.log('Token saved:', jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"test123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/login",
              "host": ["{{base_url}}"],
              "path": ["users", "login"]
            },
            "description": "Se connecter avec un compte existant"
          }
        }
      ]
    },
    {
      "name": "Categories & Lines",
      "item": [
        {
          "name": "Get Metro Lines (Category 1)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/categories/1/lines",
              "host": ["{{base_url}}"],
              "path": ["categories", "1", "lines"]
            },
            "description": "Récupérer toutes les lignes de métro"
          }
        },
        {
          "name": "Get Bus Lines (Category 2)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/categories/2/lines",
              "host": ["{{base_url}}"],
              "path": ["categories", "2", "lines"]
            },
            "description": "Récupérer toutes les lignes de bus"
          }
        },
        {
          "name": "Get Tramway Lines (Category 3)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/categories/3/lines",
              "host": ["{{base_url}}"],
              "path": ["categories", "3", "lines"]
            },
            "description": "Récupérer toutes les lignes de tramway"
          }
        },
        {
          "name": "Get Line Details (Metro B)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/lines/1",
              "host": ["{{base_url}}"],
              "path": ["lines", "1"]
            },
            "description": "Obtenir les détails du Métro B (ligne id=1)"
          }
        },
        {
          "name": "Get Line Stops (Metro B)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/lines/1/stops",
              "host": ["{{base_url}}"],
              "path": ["lines", "1", "stops"]
            },
            "description": "Obtenir tous les arrêts du Métro B avec coordonnées"
          }
        },
        {
          "name": "Update Line",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Métro B - Ligne Modifiée\",\n  \"startTime\": \"05:00\",\n  \"endTime\": \"01:00\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/lines/1",
              "host": ["{{base_url}}"],
              "path": ["lines", "1"]
            },
            "description": "Modifier les détails d'une ligne"
          }
        }
      ]
    },
    {
      "name": "Stops Management",
      "item": [
        {
          "name": "Add Stop to Line",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Nouveau Terminal\",\n  \"latitude\": 43.5500,\n  \"longitude\": 1.4700\n}"
            },
            "url": {
              "raw": "{{base_url}}/lines/1/stops",
              "host": ["{{base_url}}"],
              "path": ["lines", "1", "stops"]
            },
            "description": "Ajouter un nouvel arrêt à la fin de la ligne 1"
          }
        },
        {
          "name": "Remove Stop from Line",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/lines/1/stops/17",
              "host": ["{{base_url}}"],
              "path": ["lines", "1", "stops", "17"]
            },
            "description": "Supprimer l'arrêt 17 de la ligne 1 (ordre sera réorganisé)"
          }
        }
      ]
    },
    {
      "name": "Statistics",
      "item": [
        {
          "name": "Distance Between 2 Stops",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/stats/distance/stops/1/5",
              "host": ["{{base_url}}"],
              "path": ["stats", "distance", "stops", "1", "5"]
            },
            "description": "Calculer la distance entre Borderouge (1) et Minimes (5)"
          }
        },
        {
          "name": "Total Line Distance (Metro B)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/stats/distance/lines/1",
              "host": ["{{base_url}}"],
              "path": ["stats", "distance", "lines", "1"]
            },
            "description": "Calculer la distance totale du Métro B"
          }
        },
        {
          "name": "Total Line Distance (Tramway T1)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/stats/distance/lines/2",
              "host": ["{{base_url}}"],
              "path": ["stats", "distance", "lines", "2"]
            },
            "description": "Calculer la distance totale du Tramway T1"
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Root Endpoint",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:5000/",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": [""]
            },
            "description": "Vérifier que l'API est accessible"
          }
        }
      ]
    }
  ]
}
